<?xml version="1.0"?>
<config>
	<sections>
		<google>
			<groups>
				<googleremarketingtags module="googleremarketingtags">
					<label>Google Remarketing Tag</label>
					<expanded>1</expanded>
					<sort_order>1000</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<google_conversion_id>
							<label>Google Conversion ID</label>
							<validate>required-entry</validate>
							<frontend_type>text</frontend_type>
							<default></default>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[
								Enter your conversion Google Conversion ID here.
							]]></comment>
						</google_conversion_id>
						<google_conversion_label>
							<label>Google Conversion Label</label>
							<validate>required-entry</validate>
							<frontend_type>text</frontend_type>
							<default></default>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[
								Enter your conversion Google Conversion Label here.
							]]></comment>
						</google_conversion_label>
						<general_product_ref>
							<label>Google Merchant Item ID</label>
							<frontend_type>select</frontend_type>
							<source_model>googleremarketingtags/source_product</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</general_product_ref>
						<include_taxes>
							<label>Include Taxes</label>
							<validate>required-entry</validate>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<default></default>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[
								Should taxes be included in the prices and totals used in the AdWords Remarketing Tag?
							]]></comment>
						</include_taxes>
						<enable_debug>
							<label>Enable Debug Mode</label>
							<validate>required-entry</validate>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<default></default>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<comment><![CDATA[
								Enable to output a detailled log to your <i>log</i> directory as well as to your browser's JavaScript console in the frontend.
							]]></comment>
						</enable_debug>
					</fields>
				</googleremarketingtags>
			</groups>
		</google>
	</sections>
</config>
